#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Type checking
echo "📝 Type checking..."
npm run type-check || exit 1

# Tests
echo "🧪 Running tests..."
npm test || exit 1

# Build check
echo "🏗️  Building..."
npm run build || exit 1

echo "✅ All pre-push checks passed!" 